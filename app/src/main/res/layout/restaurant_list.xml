<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/restaurant_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/spacing_4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_restaurant"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                tools:src="@drawable/ic_launcher_background" />

            <LinearLayout
                android:layout_width="227dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_restaurantName"
                    android:layout_width="216dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="18dp"
                    android:fontFamily="@font/roboto"
                    style="@style/title_name"
                    android:textSize="14sp"
                    tools:text="Restaurant ABC" />

                <TextView
                    android:id="@+id/textView_restaurantDescription"
                    android:layout_width="216dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginBottom="25dp"
                    android:lineSpacingExtra="2sp"
                    android:translationY="-0.97sp"
                    android:gravity="top"
                    android:fontFamily="@font/roboto"
                    android:textSize="12sp"
                    tools:text="Food ABC" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView_favoriteIcon"
                android:layout_width="20dp"
                android:layout_height="16.35dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="35.5dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="36.15dp"
                android:src="@drawable/baseline_favorite_border_black_20" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>